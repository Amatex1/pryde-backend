{
  "name": "pryde-backend",
  "private": true,
  "version": "1.0.0",
  "description": "Pryde Social Network Backend",
  "type": "module",
  "scripts": {
    "prestart": "node scripts/update-version.js",
    "start": "cd server && npm start",
    "dev": "cd server && npm run dev",
    "test": "cd server && npm test",
    "test:watch": "cd server && npm run test:watch",
    "test:mongo": "node server/scripts/testMongoConnection.js",
    "fix:mongo": "node server/scripts/fixMongoConnectionString.js",
    "backup": "node server/scripts/backupToCloud.js",
    "backup:all": "node server/scripts/backupAll.js",
    "audit": "node server/scripts/runFullAudit.js",
    "audit:json": "node server/scripts/runFullAudit.js > audit-report.json",
    "audit:dry-run": "node server/scripts/runFullAuditDryRun.js",
    "audit:pryde": "node server/scripts/prydeAudit.js",
    "audit:theme": "node server/scripts/themeLeakAudit.js",
    "audit:paths": "node server/scripts/userImpactAudit.js",
    "audit:health": "node server/scripts/codeHealthAudit.js",
    "audit:final": "node server/scripts/prydeAudit.js && node server/scripts/themeLeakAudit.js && node server/scripts/userImpactAudit.js && node server/scripts/codeHealthAudit.js && node server/scripts/generateAuditReport.js",
    "audit:auth": "node server/scripts/runtimeAuthAudit.js",
    "release:check": "node server/scripts/releaseGuard.js",
    "freeze:check": "node server/scripts/freezeGuard.js",
    "polish:theme": "node server/scripts/themeLeakFixer.js",
    "polish:theme:dry": "node server/scripts/themeLeakFixer.js --dry-run",
    "create-indexes": "cd server && node scripts/create-indexes.js"
  },
  "dependencies": {
    "express-rate-limit": "^8.2.1",
    "node-fetch": "^3.3.2"
  }
}
